<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('includes/head.ejs') %>
    <style>
      .signup-form {
        width: 20rem;
        max-width: 90%;
        margin: auto;
        display: block;
      }

      .form-control {
        margin: 1rem 0;
      }

      .form-control label,
      .form-control input {
        display: block;
        width: 100%;
        margin-bottom: 0.25rem;
      }

      .form-control input {
        border: 1px solid #a1a1a1;
        font: inherit;
        border-radius: 2px;
      }

      .btn {
        display: inline-block;
        padding: 0.25rem 1rem;
        text-decoration: none;
        font: inherit;
        border: 1px solid #00695c;
        color: #00695c;
        background: white;
        border-radius: 3px;
        cursor: pointer;
      }
      .signUp-err {
        text-align: center;
        color: red;
      }
    </style>
  </head>
  <body>
    <header class="main-header">
      <%- include('includes/navigation.ejs') %>
    </header>
    <div class="signUp-err">
      <% if(errors){ %>
      <p><%=errors %></p>
      <%}%>
    </div>
    <div class="main-content">
      <div>
        <form
          class="signup-form"
          action="/auth/signup"
          method="post"
          novalidate
        >
          <div class="form-control">
            <label for="em">E-Mail</label>
            <input type="email" name="email" id="em" />
          </div>
          <div class="form-control">
            <label for="pas">Password</label>
            <input type="text" name="pass" id="pas" />
          </div>
          <div class="form-control">
            <label for="repas">Re enter password</label>
            <input type="text" name="repass" id="repas" />
          </div>
          <button class="btn" type="submit">SignUp</button>
        </form>
      </div>
    </div>
    <%- include('includes/footer.ejs') %>
  </body>
</html>
