<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('includes/head.ejs') %>
  </head>
  <body>
    <header class="main-header">
      <%- include('includes/navigation.ejs') %>
      <style>
        .centered {
          text-align: center;
        }
        .idea_actions {
          padding: 1rem;
          text-align: center;
          margin-top: 30px;
        }
        .btn {
          display: inline-block;
          padding: 0.25rem 1rem;
          text-decoration: none;
          font: inherit;
          border: 1px solid #00695c;
          color: #00695c;
          background: white;
          border-radius: 3px;
          cursor: pointer;
        }
      </style>
    </header>
    <div>
      <div class="centered">
        <h3><%=idea.title%></h3>
        <hr />
        <p><%=idea.description%></p>
      </div>
      <div class="idea_actions">
        <% if (isAuth){ %>
        <a class="btn" href="/idea/edit/<%=idea.id%>">Edit</a>
        <a class="btn" href="/public/post/<%=idea.id%>">Publish </a>
        <a class="btn" href="/public/remove/<%=idea.id%>"
          >Remove from public access
        </a>
        <a class="btn" href="/idea/delete/<%=idea.id%>">Delete </a>
      </div>
      <% } else {%> <% } %>
    </div>
    <%- include('includes/footer.ejs') %>
  </body>
</html>
